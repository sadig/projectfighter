<div id="SignUpDialog" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="SignUpDialogLabel" aria-hidden="true">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="modal-header">
      <h3 id="SignUpDialogLabel">Sign up</h3>
    </div>
    <div class="modal-body">
      <div class="span4">
        <%= f.label :name, 'Your Name'%>
        <%= f.text_field :name, :placeholder=>'Your Name', :class=>'span5' %>
        <%= f.label :email, 'E-Mail' %>
        <%= f.email_field :email, :placeholder => 'E-Mail', :class=>'span5' %>
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, :placeholder=>'Password', :class=>'span5' %>
        <%= f.label :password_confirmation, 'Confirm Password' %>
        <%= f.password_field :password_confirmation,  :placeholder=>'Confirm Password', :class=>'span5' %>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
  <%- end %>
</div>
